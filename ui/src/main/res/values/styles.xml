<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/futura_pt_medium</item>
        <item name="android:textColor">@color/toolbar_text_color</item>
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BookFlightFieldTitle">
        <item name="android:fontFamily">@font/futura_pt_medium</item>
        <item name="android:textColor">@color/toolbar_text_color</item>
        <item name="android:textSize">@dimen/form_field_title</item>
    </style>

    <style name="AddPassengersFieldTitle" parent="BookFlightFieldTitle">
        <item name="android:textColor">@color/greyed_text_color</item>
    </style>

    <style name="BookFlightFieldSelectableField">
        <item name="android:fontFamily">@font/futura_pt_medium</item>
        <item name="android:textColor">@color/toolbar_text_color</item>
        <item name="android:textSize">@dimen/form_field</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:alpha">0.3</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="ArrowBottom">
        <item name="android:src">@drawable/ic_bottom_arrow</item>
        <item name="android:layout_height">@dimen/ic_bottom_arrow_height</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SearchFlightsButton">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:background">@color/search_flights_button_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:fontFamily">@font/futura_pt_medium</item>
        <item name="android:textSize">@dimen/form_field</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NewSearchButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:letterSpacing">0.05</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/futura_pt_medium</item>
        <item name="android:textSize">@dimen/form_field</item>
        <item name="android:textColor">@color/toolbar_text_color</item>
    </style>

    <style name="BlueCircleBackground">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textColor">@color/add_passengers_textview_color_states</item>
        <item name="android:background">@drawable/blue_circle_background</item>
    </style>

</resources>
