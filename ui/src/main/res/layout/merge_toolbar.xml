<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/main_space"
    android:paddingEnd="@dimen/main_space">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backButtonToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_space_x2"
        app:srcCompat="@drawable/ic_left_arrow" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleTextViewToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_space_x2"
        android:fontFamily="@font/futura_pt_medium"
        android:text="Leaving from"
        android:textColor="@color/toolbar_text_color"
        android:textSize="32sp"
        android:textStyle="bold" />
</LinearLayout>